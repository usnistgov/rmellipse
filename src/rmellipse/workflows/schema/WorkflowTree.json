{
    "title": "Workflow Tree",
    "description": "An object that describes the relation ship between processes and datasets in a workflow.",
    "type": "object",
    "required": [
        "jobs",
        "data_pointers",
        "edges"
    ],
    "properties": {
        "jobs": {"$ref":"#/definitions/Job"},
        "data_pointers": {"$ref":"#/definitions/Job"},
        "edges": {"$ref":"#/definitions/Job"}
    },
    "definitions": {
        "Job": {
            "type": "object",
            "patternProperties": {
                "^.*$": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "commands": {
                            "type": "array",
                            "items": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            },
            "additionalProperties": false
        },
        "DataPointer": {
            "type": "object",
            "patternProperties": {
                "^.*$": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "path": {
                            "type": "string"
                        }
                    }
                }
            },
            "additionalProperties": false
        },
        "Edge": {
            "type": "object",
            "description":"Edge between a DataPointer and a Job.",
            "patternProperties": {
                "^.*$": {
                    "type": "object",
                    "properties": {
                        "nodes": {
                            "type": "array",
                            "items":{
                                "type":"string",
                                "minItems":2,
                                "maxItems":2
                            }
                        }
                    }
                }
            },
            "additionalProperties": false
        }   
    }
}